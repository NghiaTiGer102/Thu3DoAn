@using MovieOnline.Models
@model IEnumerable<DanhSachPhim>
@{ DanhSachPhim phim = Model.ToList().LastOrDefault();}
<div class="tab1">
    <div class="tab_movies_agileinfo">
        <div class="w3_agile_featured_movies">
            <div class="col-md-5 video_agile_player">
                <div class="video-grid-single-page-agileits">
                    <div data-video="f2Z65fobH2I" id="video"> <img src="/Content/images/@phim.HinhAnh" alt="" class="img-responsive" /> </div>
                </div>



                <div class="player-text">
                    <p class="fexi_header">@phim.TenPhim</p>
                    <p class="fexi_header_para">
                        <span class="conjuring_w3">@phim.TenPhim<label>:</label></span>@phim.TomTatNoiDung
                    </p>
                    <p class="fexi_header_para"><span>Release On<label>:</label></span>@phim.NgayPhatHanh.Value.Year </p>

                    <p class="fexi_header_para fexi_header_para1">
                        @{double danhgias = phim.DanhGia.Value; ;
                            for (int star = 0; star < danhgias; star++)
                            {
                                <a href="#"><i class="fa fa-star" aria-hidden="true"></i></a>
                            }

                            for (int star = 0; star < 5 - danhgias; star++)
                            {
                                <a href="#"><i class="fa fa-star-o" aria-hidden="true"></i></a>
                            }
                        }
                    </p>
                </div>
            </div>
            <div class="col-md-7 wthree_agile-movies_list">

                @foreach (var item in Model)
                {
                    <div class="w3l-movie-gride-agile">
                        <a href="@Url.Action("Index","Single",new {id=item.Id})" class="hvr-sweep-to-bottom">
                            <img src="/Content/images/@item.HinhAnh" title="Movies Pro" class="img-responsive" alt=" ">
                            <div class="w3l-action-icon"><i class="fa fa-play-circle-o" aria-hidden="true"></i></div>
                        </a>
                        <div class="mid-1 agileits_w3layouts_mid_1_home">
                            <div class="w3l-movie-text">
                                <h6><a href="@Url.Action("Index","Single",new {id=item.Id})">@item.TenPhim</a></h6>
                            </div>
                            <div class="mid-2 agile_mid_2_home">
                                <p>@item.NgayPhatHanh.Value.Year</p>
                                <div class="block-stars">
                                    <span>Star Rating<label>:</label></span>
                                    @{double danhgia = item.DanhGia.Value; int nost = 0;}
                                    @for (int star = 0; star < danhgia; star++)
                                    {
                                        <a href="#"><i class="fa fa-star" aria-hidden="true"></i></a>
                                    }

                                    @for (int star = 0; star < 5 - danhgia; star++)
                                    {
                                        <a href="#"><i class="fa fa-star-o" aria-hidden="true"></i></a>
                                    }
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(item.Tag))
                        {
                            <div class="ribben">
                                @if (!string.IsNullOrEmpty(item.Tag))
                                {
                                    <p>@item.Tag</p>
                                }
                                else if (item.NgayPhatHanh.Value.Date >= DateTime.Now.Date && item.NgayPhatHanh.Value.Date <= DateTime.Now.AddDays(7).Date)
                                {
                                    <p>NEW</p>
                                }


                            </div>
                        }
                        else
                        {
                            if (item.NgayPhatHanh.Value.Date >= DateTime.Now.Date && item.NgayPhatHanh.Value.Date <= DateTime.Now.AddDays(7).Date)
                            {
                                <div class="ribben">


                                    <p>NEW</p>

                                </div>
                            }


                        }
                    </div>
                }



            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="cleafix"></div>
    </div>
</div>