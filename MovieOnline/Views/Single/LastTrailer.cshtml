@using MovieOnline.Models
@model IEnumerable<DanhSachPhim>
    <div class="col-md-4 latest-news-agile-right-content">
        @{ DanhSachPhim ds = ViewBag.phim;}
        @{ TheLoai tl = ViewBag.theloai;}
        <h4 class="side-t-w3l-agile"></h4>
        <h4 class="side-t-w3l-agile">Latest <span>Movie</span></h4>
        <div class="video_agile_player sidebar-player">
            <div class="video-grid-single-page-agileits">
                <div data-video="fNKUgX8PhMA" id="video1"> <img src="/Content/images/@ds.HinhAnh" alt="" class="img-responsive"> <div id="play"></div></div>
            </div>


            <div class="player-text side-bar-info">
                <p class="fexi_header">@ds.TenPhim </p>

                <p class="fexi_header_para"><span>Release On<label>:</label></span>@ds.NgayPhatHanh.Value.ToString("yyyy MMMM dd") </p>


                <p class="fexi_header_para fexi_header_para1">
                    <span>Star Rating<label>:</label></span>
                    @{double danhgia = ds.DanhGia.Value; int nost = 0;}
                    @for (int star = 0; star < danhgia; star++)
                    {
                        <a href="#"><i class="fa fa-star" aria-hidden="true"></i></a>
                    }

                    @for (int star = 0; star < 5 - danhgia; star++)
                    {
                        <a href="#"><i class="fa fa-star-o" aria-hidden="true"></i></a>
                    }

                </p>
                <p class="fexi_header_para">
                    <span class="conjuring_w3">Story Line<label>:</label></span>@ds.TomTatNoiDung
                </p>
            </div>

        </div>
        <div class="clearfix"> </div>
        <div class="agile-info-recent">
            <h4 class="side-t-w3l-agile">Latest <span>Trailer</span></h4>
            <div class="w3ls-recent-grids">
                @foreach (var item in Model)
                {
                    <div class="w3l-recent-grid">
                        <div class="wom">
                            <a href="@Url.Action("Index","single",new { id = item.Id })"><img src="/Content/images/@item.HinhAnh" alt=" " class="img-responsive"></a>
                        </div>
                        <div class="wom-right">
                            <h5><a href="@Url.Action("Index","single",new { id = item.Id })">@item.TenPhim</a></h5>
                            <p>
                                @item.TomTatNoiDung
                            </p>
                            <ul class="w3l-sider-list">
                                <li><i class="fa fa-clock-o" aria-hidden="true"></i>@item.NgayPhatHanh</li>
                                <li><i class="fa fa-eye" aria-hidden="true"></i>@item.LuotXem</li>
                            </ul>
                        </div>
                        <div class="clearfix"> </div>
                    </div>

                }

            </div>
        </div>

    </div>